# ===========================================
# MPM - Meme Prediction Market
# Environment Configuration Example
# ===========================================
# Copy this to .env.local and fill in your values

# App
NEXT_PUBLIC_APP_NAME="Meme Prediction Market"
NEXT_PUBLIC_BASE_URL="https://mpm.fun"

# Solana Network (devnet | mainnet-beta)
NEXT_PUBLIC_NETWORK="devnet"
NEXT_PUBLIC_RPC_URL="https://api.devnet.solana.com"

# Program IDs
NEXT_PUBLIC_PROGRAM_ID="your_program_id_here"

# PDAs (derived from program)
NEXT_PUBLIC_CONFIG_PDA="your_config_pda_here"

# Admin/Treasury Wallet
NEXT_PUBLIC_ADMIN_WALLET="your_admin_wallet_here"
NEXT_PUBLIC_TREASURY_WALLET="your_treasury_wallet_here"

# Admin Private Key (for server-side operations like starting/settling rounds)
# WARNING: Keep this secret! Never commit to git or expose publicly
# Format: JSON array of bytes, e.g., [1,2,3,...]
ADMIN_PRIVATE_KEY=""

# API Secret (for securing admin endpoints)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
API_SECRET=""

# Fee Configuration (basis points)
# 250 = 2.5% treasury fee
# 100 = 1% referrer fee
NEXT_PUBLIC_TREASURY_FEE_BPS="250"
NEXT_PUBLIC_REFERRER_FEE_BPS="100"

# Bet Limits (in lamports)
# 10000000 = 0.01 SOL minimum
# 10000000000 = 10 SOL maximum
NEXT_PUBLIC_MIN_BET_LAMPORTS="10000000"
NEXT_PUBLIC_MAX_BET_LAMPORTS="10000000000"

# CoinGecko API (optional - for higher rate limits)
# COINGECKO_API_KEY=""

# ===========================================
# Twitter Bot (@microperps)
# ===========================================
# Get credentials from https://developer.twitter.com
# Requires OAuth 1.0a with Read/Write permissions

TWITTER_API_KEY=""
TWITTER_API_SECRET=""
TWITTER_BEARER_TOKEN=""
TWITTER_ACCESS_TOKEN=""
TWITTER_ACCESS_SECRET=""

# Enable/disable Twitter posting (set to "true" in production)
TWITTER_ENABLED="false"

# Cron job secret (for Vercel cron authentication)
CRON_SECRET=""
